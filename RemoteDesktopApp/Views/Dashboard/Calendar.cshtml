@{
    ViewData["Title"] = "Calendar & Events";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="fade-in">
    <!-- Calendar Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>Calendar & Events
                    </h1>
                    <p class="text-muted mb-0">Manage your schedule with Persian Solar Calendar</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" onclick="toggleCalendarType()">
                        <i class="fas fa-exchange-alt me-1"></i>
                        <span id="calendarTypeBtn">Persian Calendar</span>
                    </button>
                    <button class="btn btn-primary" onclick="showCreateEventModal()">
                        <i class="fas fa-plus me-1"></i>New Event
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar Controls -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-outline-secondary" onclick="previousMonth()">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <div class="text-center">
                            <h5 class="mb-0" id="currentMonthYear">Loading...</h5>
                            <small class="text-muted" id="persianDate">Persian Date</small>
                        </div>
                        <button class="btn btn-outline-secondary" onclick="nextMonth()">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="fw-bold text-primary" id="todayEventsCount">0</div>
                            <small class="text-muted">Today</small>
                        </div>
                        <div class="col-4">
                            <div class="fw-bold text-success" id="weekEventsCount">0</div>
                            <small class="text-muted">This Week</small>
                        </div>
                        <div class="col-4">
                            <div class="fw-bold text-warning" id="monthEventsCount">0</div>
                            <small class="text-muted">This Month</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Calendar Row -->
    <div class="row">
        <!-- Calendar Grid -->
        <div class="col-lg-8 mb-4">
            <div class="dashboard-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Calendar View</h6>
                    <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="viewType" id="monthView" checked>
                        <label class="btn btn-outline-primary" for="monthView">Month</label>
                        
                        <input type="radio" class="btn-check" name="viewType" id="weekView">
                        <label class="btn btn-outline-primary" for="weekView">Week</label>
                        
                        <input type="radio" class="btn-check" name="viewType" id="dayView">
                        <label class="btn btn-outline-primary" for="dayView">Day</label>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- Calendar will be rendered here -->
                    <div id="calendar-container">
                        <div class="calendar-grid">
                            <!-- Calendar Header -->
                            <div class="calendar-header">
                                <div class="calendar-day-header">Sun</div>
                                <div class="calendar-day-header">Mon</div>
                                <div class="calendar-day-header">Tue</div>
                                <div class="calendar-day-header">Wed</div>
                                <div class="calendar-day-header">Thu</div>
                                <div class="calendar-day-header">Fri</div>
                                <div class="calendar-day-header">Sat</div>
                            </div>
                            <!-- Calendar Body -->
                            <div id="calendar-body" class="calendar-body">
                                <!-- Calendar days will be generated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events Sidebar -->
        <div class="col-lg-4">
            <!-- Today's Events -->
            <div class="dashboard-card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-clock text-primary me-2"></i>Today's Events
                    </h6>
                </div>
                <div class="card-body">
                    <div id="todayEvents">
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-calendar-day fa-2x mb-2"></i>
                            <p class="mb-0">No events today</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="dashboard-card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-calendar-week text-success me-2"></i>Upcoming Events
                    </h6>
                </div>
                <div class="card-body">
                    <div id="upcomingEvents">
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-calendar-plus fa-2x mb-2"></i>
                            <p class="mb-0">No upcoming events</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Persian Holidays -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-star text-warning me-2"></i>Persian Holidays
                    </h6>
                </div>
                <div class="card-body">
                    <div id="persianHolidays">
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-calendar-star fa-2x mb-2"></i>
                            <p class="mb-0">Loading holidays...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Event Modal -->
<div class="modal fade" id="eventModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventModalTitle">Create New Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="eventForm">
                    <input type="hidden" id="eventId">
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="eventTitle" class="form-label">Event Title *</label>
                            <input type="text" class="form-control" id="eventTitle" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="eventColor" class="form-label">Color</label>
                            <input type="color" class="form-control form-control-color" id="eventColor" value="#3b82f6">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="eventDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="eventDescription" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="eventStartDate" class="form-label">Start Date *</label>
                            <input type="datetime-local" class="form-control" id="eventStartDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="eventEndDate" class="form-label">End Date</label>
                            <input type="datetime-local" class="form-control" id="eventEndDate">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="eventType" class="form-label">Type</label>
                            <select class="form-select" id="eventType">
                                <option value="0">Personal</option>
                                <option value="1">Work</option>
                                <option value="2">Meeting</option>
                                <option value="3">Deadline</option>
                                <option value="4">Holiday</option>
                                <option value="5">Birthday</option>
                                <option value="6">Appointment</option>
                                <option value="7">Task</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="eventPriority" class="form-label">Priority</label>
                            <select class="form-select" id="eventPriority">
                                <option value="0">Low</option>
                                <option value="1" selected>Medium</option>
                                <option value="2">High</option>
                                <option value="3">Critical</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="eventLocation" class="form-label">Location</label>
                            <input type="text" class="form-control" id="eventLocation">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="eventAllDay">
                                <label class="form-check-label" for="eventAllDay">
                                    All Day Event
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="eventHasAlarm">
                                <label class="form-check-label" for="eventHasAlarm">
                                    Set Reminder
                                </label>
                            </div>
                        </div>
                    </div>

                    <div id="alarmSettings" style="display: none;">
                        <div class="mb-3">
                            <label for="alarmMinutes" class="form-label">Remind me before</label>
                            <select class="form-select" id="alarmMinutes">
                                <option value="5">5 minutes</option>
                                <option value="10">10 minutes</option>
                                <option value="15" selected>15 minutes</option>
                                <option value="30">30 minutes</option>
                                <option value="60">1 hour</option>
                                <option value="120">2 hours</option>
                                <option value="1440">1 day</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="eventNotes" class="form-label">Notes</label>
                        <textarea class="form-control" id="eventNotes" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteEventBtn" style="display: none;" onclick="deleteEvent()">Delete</button>
                <button type="button" class="btn btn-primary" onclick="saveEvent()">Save Event</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" />
    <script src="~/js/calendar.js" asp-append-version="true"></script>
}
