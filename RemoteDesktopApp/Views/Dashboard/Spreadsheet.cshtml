@{
    ViewData["Title"] = "جداول";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="fade-in">
    <!-- Spreadsheet Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-table text-success me-2"></i>Spreadsheets
                    </h1>
                    <p class="text-muted mb-0">Create and manage your data with powerful spreadsheet tools</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" onclick="showImportModal()">
                        <i class="fas fa-upload me-1"></i>وارد کردن
                    </button>
                    <button class="btn btn-success" onclick="showCreateSpreadsheetModal()">
                        <i class="fas fa-plus me-1"></i>جدول جدید
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Spreadsheet Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs" id="spreadsheetTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="my-spreadsheets-tab" data-bs-toggle="tab" data-bs-target="#my-spreadsheets" type="button" role="tab">
                        <i class="fas fa-user me-1"></i>My Spreadsheets
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="shared-tab" data-bs-toggle="tab" data-bs-target="#shared" type="button" role="tab">
                        <i class="fas fa-share-alt me-1"></i>Shared with Me
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="templates-tab" data-bs-toggle="tab" data-bs-target="#templates" type="button" role="tab">
                        <i class="fas fa-layer-group me-1"></i>Templates
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="tab-content" id="spreadsheetTabContent">
        <!-- My Spreadsheets -->
        <div class="tab-pane fade show active" id="my-spreadsheets" role="tabpanel">
            <div class="row" id="mySpreadsheetsList">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading your spreadsheets...</p>
                </div>
            </div>
        </div>

        <!-- Shared Spreadsheets -->
        <div class="tab-pane fade" id="shared" role="tabpanel">
            <div class="row" id="sharedSpreadsheetsList">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading shared spreadsheets...</p>
                </div>
            </div>
        </div>

        <!-- Templates -->
        <div class="tab-pane fade" id="templates" role="tabpanel">
            <div class="row" id="templatesList">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading templates...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Spreadsheet Editor Modal -->
<div class="modal fade" id="spreadsheetEditorModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex align-items-center">
                    <i class="fas fa-table text-success me-2"></i>
                    <h5 class="modal-title" id="spreadsheetTitle">Untitled Spreadsheet</h5>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-secondary" onclick="showShareModal()">
                        <i class="fas fa-share-alt me-1"></i>Share
                    </button>
                    <button class="btn btn-sm btn-outline-primary" onclick="showVersionHistory()">
                        <i class="fas fa-history me-1"></i>History
                    </button>
                    <button class="btn btn-sm btn-success" onclick="saveSpreadsheet()">
                        <i class="fas fa-save me-1"></i>Save
                    </button>
                    <button type="button" class="btn-close" onclick="closeSpreadsheetEditor()"></button>
                </div>
            </div>
            <div class="modal-body p-0">
                <!-- Spreadsheet Toolbar -->
                <div class="spreadsheet-toolbar">
                    <div class="toolbar-section">
                        <button class="btn btn-sm btn-outline-secondary" onclick="undoAction()">
                            <i class="fas fa-undo"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="redoAction()">
                            <i class="fas fa-redo"></i>
                        </button>
                    </div>
                    <div class="toolbar-section">
                        <select class="form-select form-select-sm" id="fontFamily" onchange="applyFormatting('fontFamily', this.value)">
                            <option value="Arial">Arial</option>
                            <option value="Helvetica">Helvetica</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Courier New">Courier New</option>
                        </select>
                        <select class="form-select form-select-sm" id="fontSize" onchange="applyFormatting('fontSize', this.value)">
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11" selected>11</option>
                            <option value="12">12</option>
                            <option value="14">14</option>
                            <option value="16">16</option>
                            <option value="18">18</option>
                            <option value="20">20</option>
                        </select>
                    </div>
                    <div class="toolbar-section">
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('bold')" id="boldBtn">
                            <i class="fas fa-bold"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('italic')" id="italicBtn">
                            <i class="fas fa-italic"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('underline')" id="underlineBtn">
                            <i class="fas fa-underline"></i>
                        </button>
                    </div>
                    <div class="toolbar-section">
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('alignLeft')" id="alignLeftBtn">
                            <i class="fas fa-align-left"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('alignCenter')" id="alignCenterBtn">
                            <i class="fas fa-align-center"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="applyFormatting('alignRight')" id="alignRightBtn">
                            <i class="fas fa-align-right"></i>
                        </button>
                    </div>
                    <div class="toolbar-section">
                        <input type="color" class="form-control form-control-color form-control-sm" id="textColor" onchange="applyFormatting('textColor', this.value)" title="Text Color">
                        <input type="color" class="form-control form-control-color form-control-sm" id="backgroundColor" onchange="applyFormatting('backgroundColor', this.value)" title="Background Color">
                    </div>
                    <div class="toolbar-section">
                        <button class="btn btn-sm btn-outline-secondary" onclick="insertChart()">
                            <i class="fas fa-chart-bar me-1"></i>Chart
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="insertFunction()">
                            <i class="fas fa-function me-1"></i>Function
                        </button>
                    </div>
                </div>

                <!-- Formula Bar -->
                <div class="formula-bar">
                    <div class="cell-reference">
                        <input type="text" class="form-control form-control-sm" id="cellReference" value="A1" readonly>
                    </div>
                    <div class="formula-input">
                        <input type="text" class="form-control form-control-sm" id="formulaInput" placeholder="Enter formula or value">
                    </div>
                </div>

                <!-- Spreadsheet Grid -->
                <div class="spreadsheet-container">
                    <div class="spreadsheet-grid" id="spreadsheetGrid">
                        <!-- Grid will be generated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Spreadsheet Modal -->
<div class="modal fade" id="createSpreadsheetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Spreadsheet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createSpreadsheetForm">
                    <div class="mb-3">
                        <label for="spreadsheetName" class="form-label">Name *</label>
                        <input type="text" class="form-control" id="spreadsheetName" required>
                    </div>
                    <div class="mb-3">
                        <label for="spreadsheetDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="spreadsheetDescription" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="spreadsheetCategory" class="form-label">Category</label>
                            <select class="form-select" id="spreadsheetCategory">
                                <option value="">Select category</option>
                                <option value="Business">Business</option>
                                <option value="Finance">Finance</option>
                                <option value="Personal">Personal</option>
                                <option value="Education">Education</option>
                                <option value="Project">Project</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="spreadsheetTags" class="form-label">Tags</label>
                            <input type="text" class="form-control" id="spreadsheetTags" placeholder="budget, analysis, report">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="rowCount" class="form-label">Rows</label>
                            <input type="number" class="form-control" id="rowCount" value="100" min="10" max="1000">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="columnCount" class="form-label">Columns</label>
                            <input type="number" class="form-control" id="columnCount" value="26" min="5" max="100">
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isPublic">
                        <label class="form-check-label" for="isPublic">
                            Make this spreadsheet public
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="createSpreadsheet()">Create Spreadsheet</button>
            </div>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import Spreadsheet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="importForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="importFile" class="form-label">Select File</label>
                        <input type="file" class="form-control" id="importFile" accept=".xlsx,.xls,.csv,.json" required>
                        <div class="form-text">Supported formats: Excel (.xlsx, .xls), CSV (.csv), JSON (.json)</div>
                    </div>
                    <div class="mb-3">
                        <label for="importName" class="form-label">Spreadsheet Name *</label>
                        <input type="text" class="form-control" id="importName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="importSpreadsheet()">Import</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/spreadsheet.css" asp-append-version="true" />
    <script src="~/js/spreadsheet.js" asp-append-version="true"></script>
}
