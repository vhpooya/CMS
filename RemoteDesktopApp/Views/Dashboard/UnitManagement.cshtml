@{
    ViewData["Title"] = "مدیریت واحدها";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-sitemap text-primary me-2"></i>
                    مدیریت واحدها
                </h2>
                <button type="button" class="btn btn-primary" onclick="showCreateUnitModal()">
                    <i class="fas fa-plus me-2"></i>
                    واحد جدید
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title" id="totalUnitsCount">0</h4>
                            <p class="card-text">کل واحدها</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-building fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title" id="totalUsersCount">0</h4>
                            <p class="card-text">کل کاربران</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title" id="activeLinksCount">0</h4>
                            <p class="card-text">پیوندهای فعال</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-link fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title" id="unassignedUsersCount">0</h4>
                            <p class="card-text">کاربران بدون واحد</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-slash fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" id="searchUnits" placeholder="جستجوی واحدها...">
                <button class="btn btn-outline-secondary" type="button" onclick="searchUnits()">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary active" onclick="showUnitsHierarchy()">
                    <i class="fas fa-sitemap me-2"></i>
                    نمای درختی
                </button>
                <button type="button" class="btn btn-outline-primary" onclick="showUnitsList()">
                    <i class="fas fa-list me-2"></i>
                    نمای فهرستی
                </button>
            </div>
        </div>
    </div>

    <!-- Units Content -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-sitemap me-2"></i>
                        ساختار سازمانی
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Hierarchy View -->
                    <div id="unitsHierarchyView">
                        <div id="unitsTree" class="tree-view">
                            <!-- Units hierarchy will be loaded here -->
                        </div>
                    </div>

                    <!-- List View -->
                    <div id="unitsListView" style="display: none;">
                        <div class="table-responsive">
                            <table class="table table-striped" id="unitsTable">
                                <thead>
                                    <tr>
                                        <th>نام واحد</th>
                                        <th>کد</th>
                                        <th>واحد والد</th>
                                        <th>مدیر</th>
                                        <th>تعداد کاربران</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Units list will be loaded here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Unit Modal -->
<div class="modal fade" id="createUnitModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ایجاد واحد جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createUnitForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="unitName" class="form-label">نام واحد *</label>
                                <input type="text" class="form-control" id="unitName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="unitCode" class="form-label">کد واحد *</label>
                                <input type="text" class="form-control" id="unitCode" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="unitDescription" class="form-label">توضیحات</label>
                        <textarea class="form-control" id="unitDescription" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="parentUnit" class="form-label">واحد والد</label>
                                <select class="form-select" id="parentUnit">
                                    <option value="">انتخاب کنید...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="unitManager" class="form-label">مدیر واحد</label>
                                <select class="form-select" id="unitManager">
                                    <option value="">انتخاب کنید...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="unitLocation" class="form-label">مکان</label>
                                <input type="text" class="form-control" id="unitLocation">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="unitPhone" class="form-label">داخلی</label>
                                <input type="text" class="form-control" id="unitPhone">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="unitEmail" class="form-label">ایمیل</label>
                                <input type="email" class="form-control" id="unitEmail">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-primary" onclick="createUnit()">ایجاد واحد</button>
            </div>
        </div>
    </div>
</div>

<!-- Unit Details Modal -->
<div class="modal fade" id="unitDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="unitDetailsTitle">جزئیات واحد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- Unit Information -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">اطلاعات واحد</h6>
                            </div>
                            <div class="card-body" id="unitInfo">
                                <!-- Unit details will be loaded here -->
                            </div>
                        </div>

                        <!-- Unit Users -->
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="card-title mb-0">کاربران واحد</h6>
                                <button type="button" class="btn btn-sm btn-primary" onclick="showAssignUserModal()">
                                    <i class="fas fa-user-plus me-1"></i>
                                    اختصاص کاربر
                                </button>
                            </div>
                            <div class="card-body">
                                <div id="unitUsers">
                                    <!-- Unit users will be loaded here -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Unit Links -->
                        <div class="card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="card-title mb-0">پیوندهای واحد</h6>
                                <button type="button" class="btn btn-sm btn-success" onclick="showCreateLinkModal()">
                                    <i class="fas fa-link me-1"></i>
                                    پیوند جدید
                                </button>
                            </div>
                            <div class="card-body">
                                <div id="unitLinks">
                                    <!-- Unit links will be loaded here -->
                                </div>
                            </div>
                        </div>

                        <!-- Sub Units -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">زیرواحدها</h6>
                            </div>
                            <div class="card-body">
                                <div id="subUnits">
                                    <!-- Sub units will be loaded here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-warning" onclick="editUnit()">ویرایش</button>
                <button type="button" class="btn btn-danger" onclick="deleteUnit()">حذف</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/unit-management.css" asp-append-version="true" />
    <script src="~/js/unit-management.js" asp-append-version="true"></script>
}
