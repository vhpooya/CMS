@{
    ViewData["Title"] = "ورود";
}

<div class="login-container">
    <div class="login-card card">
        <div class="login-header">
            <i class="fas fa-desktop fa-3x text-primary mb-3"></i>
            <h2>فضای کاری تجاری پرو</h2>
            <p>برای دسترسی به دسکتاپ راه دور خود وارد شوید</p>
        </div>
        
        <form method="post" asp-action="Login" asp-controller="Home">
            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                </div>
            }

            <div class="mb-3">
                <label for="username" class="form-label">نام کاربری</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="نام کاربری خود را وارد کنید" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">رمز عبور</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="رمز عبور خود را وارد کنید" required>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    مرا به خاطر بسپار
                </label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>ورود
                </button>
            </div>
        </form>
        
        <div class="mt-4">
            <div class="alert alert-info" role="alert">
                <h6 class="alert-heading">اطلاعات ورود نمونه:</h6>
                <ul class="mb-0">
                    <li><strong>admin@example.com</strong> / admin123 (مدیر)</li>
                    <li><strong>demo@example.com</strong> / demo123 (نمونه)</li>
                    <li><strong>alice@example.com</strong> / alice123 (کاربر)</li>
                </ul>
            </div>
        </div>
        
    </div>
</div>
