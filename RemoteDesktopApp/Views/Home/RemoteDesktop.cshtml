@{
    ViewData["Title"] = "Remote Desktop";
}

<div class="container-fluid py-3">
    <!-- Connection Status Bar -->
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div class="d-flex align-items-center gap-3">
                            <span class="status-indicator status-offline" id="connectionStatus">
                                <span class="status-dot"></span>
                                Disconnected
                            </span>
                            <span class="text-muted" id="connectionInfo">Not connected</span>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-primary" id="connectBtn">
                                <i class="fas fa-plug me-1"></i>Connect
                            </button>
                            <button class="btn btn-sm btn-danger" id="disconnectBtn" style="display: none;">
                                <i class="fas fa-times me-1"></i>Disconnect
                            </button>
                            <button class="btn btn-sm btn-outline-secondary" id="settingsBtn">
                                <i class="fas fa-cog me-1"></i>Settings
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Remote Desktop Viewer -->
    <div class="row">
        <div class="col">
            <div class="remote-desktop-container">
                <div class="remote-desktop-viewer" id="desktopViewer">
                    <div class="remote-desktop-loading" id="loadingIndicator">
                        <div class="spinner mb-3"></div>
                        <h5>Connecting to Remote Desktop...</h5>
                        <p class="text-muted">Please wait while we establish the connection</p>
                    </div>
                    <img id="desktopScreen" class="remote-desktop-screen" style="display: none;" alt="Remote Desktop Screen">
                </div>
                
                <!-- Controls -->
                <div class="remote-desktop-controls">
                    <div class="control-group">
                        <label>Quality:</label>
                        <select id="qualitySelect">
                            <option value="50">Low (50%)</option>
                            <option value="75">Medium (75%)</option>
                            <option value="85" selected>High (85%)</option>
                            <option value="95">Ultra (95%)</option>
                        </select>
                    </div>
                    
                    <div class="control-group">
                        <label>Monitor:</label>
                        <select id="monitorSelect">
                            <option value="-1">All Monitors</option>
                        </select>
                    </div>
                    
                    <div class="control-group">
                        <label>FPS:</label>
                        <input type="range" id="fpsSlider" min="1" max="60" value="30" style="width: 100px;">
                        <span id="fpsValue">30</span>
                    </div>
                    
                    <div class="control-group">
                        <button class="btn btn-sm btn-outline-light" id="fullscreenBtn">
                            <i class="fas fa-expand"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="screenshotBtn">
                            <i class="fas fa-camera"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="keyboardBtn">
                            <i class="fas fa-keyboard"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Virtual Keyboard Modal -->
<div class="modal fade" id="keyboardModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Virtual Keyboard</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="virtual-keyboard">
                    <div class="keyboard-row">
                        <button class="key" data-key="192">`</button>
                        <button class="key" data-key="49">1</button>
                        <button class="key" data-key="50">2</button>
                        <button class="key" data-key="51">3</button>
                        <button class="key" data-key="52">4</button>
                        <button class="key" data-key="53">5</button>
                        <button class="key" data-key="54">6</button>
                        <button class="key" data-key="55">7</button>
                        <button class="key" data-key="56">8</button>
                        <button class="key" data-key="57">9</button>
                        <button class="key" data-key="48">0</button>
                        <button class="key" data-key="189">-</button>
                        <button class="key" data-key="187">=</button>
                        <button class="key wide" data-key="8">Backspace</button>
                    </div>
                    <!-- Add more keyboard rows as needed -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/remote-desktop.js" asp-append-version="true"></script>
}
