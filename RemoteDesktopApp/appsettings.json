{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RemoteDesktopApp;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "RemoteDesktopApp",
    "Audience": "RemoteDesktopClient"
  },
  "RemoteDesktop": {
    "MaxConnections": 10,
    "ScreenCaptureQuality": 85,
    "FrameRate": 30,
    "EnableFileTransfer": true,
    "EnableClipboardSync": true,
    "ConnectionRequestTimeoutMinutes": 5,
    "MaxFileTransferSizeMB": 100
  }
}
